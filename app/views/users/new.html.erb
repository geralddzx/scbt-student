<div id="auth-content">
  <h1>Sign Up</h1>
  <br>
  <form action="<%= users_url %>" method="post">
    <input class="form-control" 
      type="hidden" 
      name="authenticity_token" 
      value="<%= form_authenticity_token %>">

    <label for="email">Email</label>
    <input "form-control"
      type="email" 
      name="user[email]" 
      value="<%= @user.email %>" 
      id="email">

    <label for="password">Password</label>
    <input "form-control"
      type="password" 
      name="user[password]" 
      value=""
      id="password">

    <label for="first_name">First Name</label>
    <input "form-control"
      type="first_name" 
      name="user[first_name]" 
      value="<%= @user.first_name %>"
      id="first_name">

    <label for="last_name">Last Name</label>
    <input "form-control"
      type="last_name" 
      name="user[last_name]" 
      value="<%= @user.last_name %>"
      id="last_name">    

    <input "form-control" type="submit" value="Sign Up">
  </form>
</div>
  